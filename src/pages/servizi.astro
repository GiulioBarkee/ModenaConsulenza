/* ! Accordion */
.title-accordion {
  cursor: pointer;
  padding: 20px;
  margin-bottom: 0;
  position: relative;
  width: 80%;
    margin: 5% auto;
    font-size: 2.5rem;
}
.title-accordion::before {
  content: "";
    display: block;
    background-image: url(/src/assets/01y.png);
    background-size: cover;
    position: absolute;
    /* bottom: -20px; */
    left: 0;
    width: 18%;
    height: 100%;
    z-index: -1;
}
.due::before {
    background-image: url(/src/assets/02y.png);
  }

  .tre::before {
    background-image: url(/src/assets/03y.png);
  }
.title-accordion:after {
  content: " +  ";
  position: absolute;
  top: 30px;
  right: 10px;
  height: 30px;
  width: 30px;
 
}
.content-accordion {
  max-height: 0;
  overflow: hidden;
  transition: all 0.8s cubic-bezier(.215, .61, .355, 1);
}
.content-accordion h4{color: #002169;}
.content-accordion p {
  padding: 20px;
  width: 40%; margin: 0 auto;
}
.content-accordion--show {
  max-height: 950px;
}
.title-accordion.accordion-opened:after {
  content: " - "; /* Modifica l'indicatore quando l'accordion è aperto */
}

