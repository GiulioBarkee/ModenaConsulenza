<script>
  // Seleziona l'elemento con classe "frecciadown"
  const frecciaDown = document.querySelector(".frecciadown");

  // Aggiungi un gestore di eventi per l'evento di clic
  frecciaDown.addEventListener("click", function (event) {
    // Impedisci il comportamento predefinito dell'ancora (scorrimento istantaneo)
    event.preventDefault();

    // Ottieni l'elemento di destinazione (hero2)
    const hero2 = document.getElementById("hero2");

    // Calcola la posizione dell'elemento di destinazione rispetto alla finestra visualizzata
    const offsetTop = hero2.offsetTop;

    // Effettua lo scorrimento della pagina in modo animato utilizzando il metodo scrollIntoView()
    window.scroll({
      top: offsetTop,
      behavior: "smooth", // Aggiungi l'effetto di animazione
    });
  });
</script>
