        }
        .grid__hero4b2 {
            max-width: 100%;
        }
        .grid--hero7 {
            max-width: 0;
            margin: 0;
        }
        .grid__hero2b {
            padding-top: 8rem;
            width: 84%;
            height: auto;
            margin: 0 auto;
            flex-wrap: wrap;
        }
        .grid__hero2b h4,
        .gridb__hero2b h4 {
            font-size: 2rem;
        }
        .grid__hero2b p,
        .gridb__hero2b p {
            font-size: 0.6rem;
        }
        .gridb__hero2b {
            width: 100%;
            gap: 0;
        }

        .grid__hero2b .col-30,
        .grid__hero2b .col-25,
        .gridb__hero2b .col-40 {
            width: 50%;
        }
        .gridb__hero2b {
            padding-top: 0;
            width: 84%;
            margin: 0 auto;
        }
        .grid__hero2b,
        .gridb__hero2b {
            text-align: center;
        }

        .grid__hero2b .col-30,
        .grid__hero2b .col-25 {
            padding-top: 40px;
        }

        .grid__hero2b p,
        .grid__hero2b p {
            font-size: 0.6rem;
        }

        .hero2bleft,
        .hero2bright {
            bottom: -8%;
        }
        .hero3b {
            height: 100%;
            margin-bottom: 28%;
        }
        .hero3b h3 {
            line-height: 30px;
            width: 80%;
            margin: 0 auto;
            font-size: 1.8rem;
            text-align: center;
        }
        .hero3b__padding-bottom {
            padding-bottom: 3rem;
        }

        .hero4b {
            height: 100%;
        }
        .hero3b__paragrafi {
            width: 80%;
            font-size: 1rem;
            margin-top: 12% !important;
            margin: 0 auto;
            text-align: center;
        }

        .hero3b a {
            font-size: 1rem;
            left: 50%;
            text-align: center;
            position: static;
            margin-bottom: 3rem;
        }

