            font-size: 1rem;
        }
        .piastrina p {
            font-size: 0.8rem;
        }

        .grid__hero4b .col-50 {
            width: 40% !important;
            margin: 0 auto;
        }
        .grid__hero4b2 {
            max-width: 100%;
        }

        .grid__hero4b2 .col-25 {
            width: 50% !important;
            height: auto;
            padding-bottom: 2rem;
        }

        .grid__hero4b2 img {
            width: 100%;
        }

        .grid--hero7 {
            margin-top: 25%;
            max-width: 100%;
            width: 100%;
        }
        .grid--hero7 h2 {
            font-size: 2rem;
            text-align: center;
            line-height: 140%;
        }
        .grid--hero7 p {
            text-align: center;
            margin: 0 auto;
            width: 84%;
        }
        .hero5b .grid--hero7 {
            padding-top: 19%;
