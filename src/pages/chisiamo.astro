    .grid__hero4b .col-50 {width: 50%!important;}
    .grid__hero4b2{ max-width: 100%; }



    .grid__hero4b2 .col-25 {
    width: 50% !important; height: auto}

    .grid__hero4b2 img{width: 100%;}

    .grid--hero7{margin-top: 25%; max-width: 100%; width: 100%;}
    .grid--hero7 h2{font-size: 2rem; text-align: center; line-height: 140%; }
    .grid--hero7 p{text-align: center; margin: 0 auto; width: 90%;}

    .grid--hero7 .col-60 img {
    position: static;
    left: 0;
    transform: translate(0);
    margin: 0 auto;
    margin-top: 10%;
} 




.hero5b{height: auto;
    margin-bottom: 25%; text-align: center;}

    .hero5b .container{position: static; margin-top: 45%;}
.hero5b .container h4{ width: 100%;text-align: center;font-size: 1.6rem;
     margin-left: 0; margin-bottom: 0; }
     .hero5b a{position: static; margin: 15% auto;}

     .hero5b .container p{margin:0 auto; width: 90%; text-align: center;  font-size:  1rem; margin-top: 5%; }
.cover__wallet{ height: auto;}

.hero1 span  {
        margin-left: 0!important; /* Rimuove il margine aggiunto */

    }

}



