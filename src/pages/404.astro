---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 - Modena Consulenza">
    <div class="hero-error">
        <div class="grid-error">
            <div class="col-30">
                <a href="/" class="button btn-error">TORNA ALLA HOME</a>
            </div>
            <div class="col-70">
                <img src="/assets/404.png" alt="" />
            </div>
        </div>
        <h4>La pagina che cerchi non Ã¨ stata trovata</h4>
    </div>
</Layout>

<style>
    .hero-error {
        height: auto;
        background-color: #002169;
        padding-top: 12rem;
    }
    .grid-error {
        display: flex;
        height: 100%;
        width: 100%;
        flex-wrap: wrap;
    }
    .grid-error .col-30 {
        display: flex;
        justify-content: center;
        align-items: flex-end;
    }
    .grid-error .col-70 {
        display: flex;
        justify-content: center;
    }
    .grid-error img {
        width: 65%;
    }
    .hero-error h4 {
        width: 100%;
        color: white;
        font-size: clamp(2rem, 1rem + 3vw,4.5rem);
        font-weight: 500;
        text-align: center;
        padding: 5rem 0;
        margin-bottom: 0;
        margin: 0 auto;
    }
    .btn-error {
        color: #ffd100;
        background-color: #fff;
        padding: 10px 34px;
    }
    .btn-error:hover {
        transform: scale(1.2);
        transition: all 0.3s cubic-bezier(0.215, 0.61, 0.355, 1);
    }

    @media (max-width: 768px) {
        .hero-error h4 {
            font-size: 2rem;
            margin: 0 auto;
        }
        .grid-error{gap: 5rem;}
    }
</style>
